<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="@dimen/task_item_padding"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/statusCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/task_item_name"
        android:layout_width="@dimen/max_text_length"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/statusCheckBox"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        style="@style/TextFieldsStyle"/>

    <TextView
        android:id="@+id/task_item_date"
        android:layout_width="@dimen/max_text_length"
        android:layout_height="wrap_content"
        android:layout_below="@id/task_item_name"
        android:layout_toEndOf="@id/statusCheckBox"
        style="@style/TextFieldsStyle"
        />

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/task_item_padding"/>

</RelativeLayout>